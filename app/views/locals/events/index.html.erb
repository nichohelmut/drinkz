<div
id="map"
style="width: 100%;
height: 400px;"
data-markers="<%= @markers.to_json %>"
data-user_markers="<%= @user_markers.to_json %>"

></div>



<div class="container">
  <% @events.each do |event| %>
  <figure class="snip1208">

  <% if %>
  <% event.event_picture == "Bar" %>
  <img src="https://www.top10berlin.de/sites/top10berlin.de/files/location/mainimages/2015/10/08/bar-ansicht_dpa.jpg" alt="sample66"/>
  <% elsif event.event_picture == "Party"%>
  <img src="https://blogmedia.evbstatic.com/wp-content/uploads/bloguk/shutterstock_199419065-730x487.jpg" alt="sample66"/>
  <% elsif event.event_picture == "Sport" %>
  <img src="https://thedubliner.gr/wp-content/uploads/all-sports-banner.png"/>
  <% elsif event.event_picture == "Park" %>
  <img src="https://www.nycgovparks.org/photo_gallery/full_size/18628.jpg"/>
  <% elsif event.event_picture == "Restaurant" %>
  <img src="http://paris.peninsula.com/en/~/media/Images/Paris/NEW/dining/loiseau-blanc/ppr-oiseau-blanc-interior-evening-1074.ashx?mw=952"/>
    <% elsif event.event_picture == "Shopping" %>
  <img src="http://www.travelerahoy.com/wp-content/uploads/2017/12/shopping-bags.jpg"/>
    <% elsif event.event_picture == "Sightseeing" %>
  <img src="https://img.grouponcdn.com/deal/sGfz6XE7hdKUk5pUJuYxCBRb4W6/sG-1000x600/v1/c700x420.jpg"/>
  <% else %>
  <% event.event_picture == "Coding" %>
  <img src="http://i.huffpost.com/gen/4784786/images/n-CODING-628x314.jpg"/>
<% end %>

    <div class="date"><span class="day"><%= event.time.strftime("%H:%M") %></span><span class="month">Today</span></div><i class="ion-beer"></i>
    <figcaption>
      <h1> <%= link_to event.location_name, locals_event_path(event) %></h1>    <p><%= event.location_address %> </p>
      <p><%= event.event_description %></p>
  </figure>
  <% end %>
</div>
