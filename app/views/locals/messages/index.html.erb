  <div class="card-block">
    <div class="row">
      <div class="col-md-11">
        <p class="card-text">
          <span class="text-muted">
            You at<%= message.timestamp %> says</span>
            <h3><%= message.title %></h3>
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>



  <%= simple_form_for @message, url:  locals_request_messages_path do |f| %>
