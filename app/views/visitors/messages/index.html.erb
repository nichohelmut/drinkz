<% @messages.each do |message| %>
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-11">
          <p class="card-text">
            <span class="text-muted">
              <p> <%= message.timestamp %></p>
              <h1>Event: <%= message.request.event.location_name %></h1>
              <p>  <%= message.user.first_name%> says: </p>
              <h1><%= message.title %></h1>
               </span>
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= simple_form_for @message, url:  visitors_request_messages_path do |f| %>
  <%= f.input :title %>
  <%= f.button :submit, class: "btn-submit-black" %>
<% end %>

