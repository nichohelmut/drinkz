<% @messages.each do |message| %>


<div class="card">
  <div class="card-block">
    <div class="row">
      <div class="col-md-11">
        <p class="card-text">
          <span class="text-muted">
            <h3><%= message.title %></h3>
            You at <%= message.timestamp %> says</span><br>
            <h2><%= message.body %></h2>
          </p>
        </div>
      </div>
    </div>
  </div>
<% end %>

  <%= simple_form_for @message, url:  visitors_request_messages_path do |f| %>
  <%# raise %>

    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.button :submit %>
  <% end %>

